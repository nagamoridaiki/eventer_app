<!DOCTYPE html>
<html lang="ja">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>
        <%= data.title %>
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />

</head>

<body>
    <header>
        <h1 class="">
            <img src="/images/bookimage2.png %>"  width="100%" height="100%" class="flex-row-reverse"/>
        </h1>
    </header>

    <div class="row">
        <div class="row">
            <!-- サイドバー -->
            <div class="col-2">
                <nav class="navbar-dark bg-dark" style="height:1000px;">
                    <!-- タグで絞る -->
                    <div class="navbar-brand">タグ</div>
                    <ul class="navbar-nav">
                    <% if (data.Tags!=null) { for (let n in data.Tags) { %>
                    <li class="nav-item"><a href="/events/search/<%= data.Tags[n].name %>" class="nav-link"><%= data.Tags[n].name %></a></li>
                    <% }} %>
                    </ul>
                </nav>
            </div>
            <div class="col-10">
                <div class="row">
                    <div class="col-12"><h3>新着情報</h3></div>
                </div>
                <div class="row">
                    <% for(let i in data.content) { %>
                        <div class="col-6" style="padding-bottom: 2rem;" >
                            <div class="row">
                                <!-- image -->
                                <div class="col-6" style="height:150px;">
                                    <img src="/images/<%= data.content[i].image %>" width="100%" height="100%" class="flex-row-reverse"/>
                                </div>
                                <div class="col-6">
                                    <dl>
                                        <!-- holdDate -->
                                        <dd><%= data.content[i].holdDateYear %>年<%= data.content[i].holdDateMonth %>月<%= data.content[i].holdDateDate %>日</dd>
                                        <!-- title -->
                                        <a href="events/show/<%= data.content[i].id %>">
                                            <h3><%= data.content[i].title %></h5>
                                        </a>
                                        <!-- subTitle -->
                                        <dd><%= data.content[i].subTitle %></dd>
                                    </dl>
                                    <!-- Tag -->
                                    <ul class="list-inline">
                                        <% if (data.content[i].Tag!=null) { for (let n in data.content[i].Tag) { %>
                                            <li class="list-inline-item bg-info text-white p-1" style="border-radius: 0.7em;"><%= data.content[i].Tag[n].name %></li>
                                        <% }} %>
                                    </ul>
                                    参加人数: <%= data.content[i].User.length %>人


                                
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    </div>

<script src="/javascripts/jquery-3.3.1.slim.min.js"></script>
<script src="/src/public/javascripts/bootstrap.bundle.min.js"></script>
<script src="/src/public/javascripts/jquery-3.3.1.slim.min.js"></script>
</body>
</html>